      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientChat"
      mc:Ignorable="d" 
      Height="450" Width="800"
      Title="Login">

    <Grid>
        <TextBox x:Name="userLogin" Text="tikhonov_" Width="200"  Height="30" Margin="296,167,296,222"/>
        
        <PasswordBox x:Name="userPassword" Width="200" Height="30" Margin="296,202,296,187"/>
        <Button x:Name="AuthUser" Content="Авторизация" Margin="0,353,0,48" Click="AuthUser_Click" IsDefault="True"/>
